{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": {
      "severity": "warn"
    },
    "arrow-parens": false,
    "only-arrow-functions": false,
    "trailing-comma": false,
    "await-promise": true,
    "no-floating-promises": true,
    "no-unused-expression": {
      "severity": "warn"
    },
    "max-line-length": {
      "options": [
        100
      ]
    },
    "no-shadowed-variable": false,
    "no-empty": {
      "severity": "warn"
    },
    "radix": false,
    "member-access": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "interface-name": false,
    "no-bitwise": false,
    "array-type": {
      "options": "array"
    },
    "max-classes-per-file": false,
    "object-literal-shorthand": false
  }
}
