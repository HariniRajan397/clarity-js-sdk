
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "esnext.bigint"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "paths": {
      "@blockstack/clarity": ["clarity/src"],
      "@blockstack/clarity-cli": ["clarity-cli/src"],
      "@blockstack/clarity-native-bin": ["clarity-native-bin/src"],
      "@blockstack/clarity-tslint": ["clarity-tslint/src"],
      "@blockstack/clarity-tutorials": ["clarity-tutorials/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
